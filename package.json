{
  "name": "amitt",
  "version": "1.0.4",
  "private": true,
  "description": "amitt is a simple event emitter for browser and node.js",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "yarn docs && node scripts/build.js",
    "test": "ts-mocha --paths -p tsconfig.json --recursive ./src/**/*.{js,cjs,mjs,ts} ./test/unit/**/*.{js,cjs,mjs,ts}",
    "lint": "eslint src/** --ignore-path ./.eslintignore",
    "docs": "typedoc --includeVersion --excludePrivate --out docs src/index.ts"
  },
  "keywords": [
    "emitter",
    "events",
    "EventEmitter",
    "emit",
    "on",
    "off"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/webigorkiev/amitt.git"
  },
  "author": "webigorkiev",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.5",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "esbuild": "^0.12.20",
    "eslint": "^7.26.0",
    "fs-extra": "^10.0.0",
    "mocha": "^8.4.0",
    "rollup": "^2.56.2",
    "rollup-plugin-dts": "^3.0.2",
    "rollup-plugin-esbuild": "^4.5.0",
    "ts-loader": "^9.2.2",
    "ts-mocha": "^8.0.0",
    "typedoc": "^0.21.5",
    "typescript": "^4.3.2"
  }
}
